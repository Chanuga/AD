@model AD.Models.Player.Player

@{
    ViewData["Title"] = "PlayerReg";
}

<div class="container">
<h2 class="text-white mt-5 pt-5 text-center">Player Registration</h2>
<div class="text-white">
    @Html.ViewData["Message"]
</div>
<hr />
<div class="row">
    <div class="col-md-2">
        </div>
    <div class="col-md-8">
        @using (Html.BeginForm("PlayerReg","NewPlayers",FormMethod.Post,new{enctype="multipart/form-data"}))
        {
        <form asp-action="PlayerReg">
            <div class="row">
             <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pemail" class="control-label text-white"></label>
                <input asp-for="pemail" class="form-control" />
                <span asp-validation-for="pemail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="playename" class="control-label text-white"></label>
                <input asp-for="playename" class="form-control" />
                <span asp-validation-for="playename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label text-white"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="repassword" class="control-label text-white"></label>
                <input asp-for="repassword" class="form-control" />
                <span asp-validation-for="repassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="age" class="control-label text-white"></label>
                <input asp-for="age" class="form-control" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label for="pimg" class="control-label text-white">Profile Image :</label>
                <input type="file" name="file" class="" />
            </div>*@
            <div class="form-group">
                <label asp-for="bowler_or_batman" class="control-label text-white"></label>
                <input asp-for="bowler_or_batman" class="form-control" />
                <span asp-validation-for="bowler_or_batman" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="battingstyle" class="control-label text-white"></label>
                <input asp-for="battingstyle" class="form-control" />
                <span asp-validation-for="battingstyle" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-6">
            <div class="form-group">
                <label asp-for="bowlingstyle" class="control-label text-white"></label>
                <input asp-for="bowlingstyle" class="form-control" />
                <span asp-validation-for="bowlingstyle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mtaches" class="control-label text-white"></label>
                <input asp-for="mtaches" class="form-control" />
                <span asp-validation-for="mtaches" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="witckets" class="control-label text-white"></label>
                <input asp-for="witckets" class="form-control" />
                <span asp-validation-for="witckets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="runs" class="control-label text-white"></label>
                <input asp-for="runs" class="form-control" />
                <span asp-validation-for="runs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="previous_cup" class="control-label text-white"></label>
                <input asp-for="previous_cup" class="form-control" />
                <span asp-validation-for="previous_cup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="thropy" class="control-label text-white"></label>
                <input asp-for="thropy" class="form-control" />
                <span asp-validation-for="thropy" class="text-danger"></span>
            </div>
            
            </div
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary text-center"/>
            </div>
        </form>
        }
    </div>
    <div class="col-md-2">
        </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
