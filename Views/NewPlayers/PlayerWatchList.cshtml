@model IEnumerable<AD.Models.Player.Player>
@{
    ViewData["Title"] = "PlayerWatchList";
    Layout = "~/Views/Shared/_PlayerLayout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th class="text-white" >
                @Html.DisplayNameFor(model => model.playename)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.pimg)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.bowler_or_batman)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.battingstyle)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.bowlingstyle)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.mtaches)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.witckets)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.runs)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.previous_cup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.playename)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.pimg)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.bowler_or_batman)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.battingstyle)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.bowlingstyle)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.mtaches)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.witckets)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.runs)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.previous_cup)
            </td>
        </tr>
}
    </tbody>
</table>
