    <div class="container px-4 text-center">
        <div class="row gx-5">
            <div class="col">
                <form action="CreateAdmin" method="post">
                    <input type="submit" class="btn btn-secondary btn-lg" value="Create New Admin" />
                </form>
            </div>
            <div class="col">
                <form action="CreateNewTrophyV1" method="post">
                    <input type="submit" class="btn btn-secondary btn-lg" value="Trophy" />
                </form>
            </div>
            <div class="col">
                <form action="AuctionList" method="post">
                    <input type="submit" class="btn btn-secondary btn-lg" value="Auction" />
                </form>
            </div>
            <div class="col">
                <form action="PlayerRegistration" method="post">
                    <input type="submit" class="btn btn-secondary btn-lg" value="Player Registration" />
                </form>
            </div>
            <div class="col">
                <form action="TeamRegistration" method="post">
                    <input type="submit" class="btn btn-secondary btn-lg" value="Team Registration" />
                </form>
            </div>

            <div class="col">
                <form asp-controller="NewPlayers" asp-action="PlayerList">
                    <input type="submit" class="btn btn-secondary btn-lg" value="View Players" />
                </form>
            </div>

             <div class="col">
                <form asp-controller="TeamOwner" asp-action="Details">
                    <input type="submit" class="btn btn-secondary btn-lg" value="View Team Owner" />
                </form>
            </div>
        </div>
    </div>
